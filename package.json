{
  "name": "sharo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "npm run lint",
    "lint": "npm run lint:js && npm run lint:scss",
    "lint:js": "xo",
    "lint:scss": "stylelint styles/**",
    "analyze": "BUNDLE_ANALYZE=both npm run build"
  },
  "dependencies": {
    "babel-eslint": "^10.0.1",
    "bootstrap": "^4.2.1",
    "bootswatch": "^4.2.1",
    "next": "^7.0.3",
    "prop-types": "^15.7.1",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-redux": "^6.0.0",
    "reactstrap": "^6.5.0",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-persist": "^5.10.0",
    "redux-thunk": "^2.3.0",
    "sharo-scripts": "^0.6.1"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "husky": "^1.2.0"
  },
  "babel": {
    "presets": [
      [
        "next/babel",
        {
          "styled-jsx": {
            "plugins": [
              "styled-jsx-plugin-postcss"
            ]
          }
        }
      ]
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-preset-env": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 1 major version",
    "not dead",
    "Chrome >= 45",
    "Firefox >= 38",
    "Edge >= 12",
    "Explorer >= 10",
    "iOS >= 9",
    "Safari >= 9",
    "Android >= 4.4",
    "Opera >= 30"
  ],
  "xo": {
    "extends": [
      "xo-react"
    ],
    "parser": "babel-eslint",
    "space": 2,
    "semicolon": false,
    "settings": {
      "react": {
        "version": "16.6.0"
      },
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".md",
            ".mdx",
            ".scss"
          ]
        }
      }
    }
  },
  "stylelint": {
    "extends": [
      "sharo-scripts/stylelint"
    ]
  }
}
