{
  "name": "sharo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "export": "next build && next export",
    "lint:scripts": "eslint .",
    "lint:styles": "stylelint **/*",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@tkesgar/sharo-babel": "^1.0.0",
    "@tkesgar/sharo-next": "^0.4.0",
    "bootstrap": "^4.4.1",
    "dotenv": "^8.2.0",
    "next": "^9.3.5",
    "postcss-preset-env": "^6.7.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "reactstrap": "^8.4.1",
    "sass": "^1.26.5",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/node": "^13.13.4",
    "@types/react": "^16.9.34",
    "eslint": "^6.8.0",
    "eslint-config-sharo-scripts": "^0.4.1",
    "prettier": "~2.0.5",
    "stylelint": "^13.3.3",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.17.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "sharo-scripts",
    "overrides": [
      {
        "files": "**/*.js",
        "env": {
          "node": true
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-recommended-scss",
      "stylelint-config-prettier"
    ]
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.md",
        "options": {
          "proseWrap": "always"
        }
      }
    ]
  }
}
