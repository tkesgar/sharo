{
  "name": "sharo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "npm run lint",
    "lint": "npm run lint:js && npm run lint:scss",
    "lint:js": "xo",
    "lint:scss": "stylelint styles/**",
    "analyze": "BUNDLE_ANALYZE=both npm run build"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "bootswatch": "^4.3.1",
    "react-redux": "^6.0.1",
    "reactstrap": "^7.1.0",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-persist": "^5.10.0",
    "redux-thunk": "^2.3.0",
    "sharo-scripts": "^0.7.2"
  },
  "devDependencies": {
    "husky": "^1.3.1"
  },
  "babel": {
    "presets": [
      "sharo-scripts/babel"
    ]
  },
  "xo": {
    "extends": [
      "sharo-scripts"
    ],
    "rules": {
      "import/no-extraneous-dependencies": [
        "error", {
          "packageDir": [
            "./",
            "./node_modules/sharo-scripts"
          ]
        }
      ]
    },
    "space": 2,
    "semicolon": false
  },
  "stylelint": {
    "extends": [
      "sharo-scripts/stylelint"
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-preset-env": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 1 major version",
    "not dead",
    "Chrome >= 45",
    "Firefox >= 38",
    "Edge >= 12",
    "Explorer >= 10",
    "iOS >= 9",
    "Safari >= 9",
    "Android >= 4.4",
    "Opera >= 30"
  ]
}
