{
  "name": "sharo",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "nodemon server.js --ignore .next/ --ignore pages/",
    "lint": "xo --fix",
    "test": "jest",
    "coverage": "jest --coverage",
    "build": "next build",
    "export": "next export",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server npm run build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser npm run build",
    "analyze": "cross-env BUNDLE_ANALYZE=both npm run build"
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "bootstrap": "^4.1.3",
    "bootswatch": "^4.1.3",
    "express": "^4.16.3",
    "next": "^6.1.2",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "reactstrap": "^6.4.0",
    "sharo-scripts": "^0.1.1"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-jest": "^21.22.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "nodemon": "^1.18.4",
    "xo": "^0.23.0"
  },
  "babel": {
    "presets": [
      [
        "next/babel",
        {
          "styled-jsx": {
            "plugins": [
              "styled-jsx-plugin-postcss"
            ]
          }
        }
      ]
    ]
  },
  "postcss": {
    "plugins": [
      "postcss-preset-env"
    ]
  },
  "xo": {
    "extends": "xo-react",
    "semicolon": false,
    "space": 2,
    "rules": {
      "max-len": "warn"
    },
    "overrides": [
      {
        "files": "**/*.test.js",
        "env": "jest",
        "plugins": [
          "jest"
        ]
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recommended-scss"
    ],
    "plugins": [
      "stylelint-scss"
    ]
  }
}
