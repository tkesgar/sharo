{
  "name": "sharo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "npm run lint",
    "lint": "npm run lint:js && npm run lint:scss",
    "lint:js": "xo",
    "lint:scss": "stylelint styles/**",
    "analyze": "BUNDLE_ANALYZE=both npm run build"
  },
  "dependencies": {
    "@tkesgar/sharo-babel": "^0.1.0",
    "@tkesgar/sharo-next": "^0.2.0",
    "bootstrap": "^4.3.1",
    "next": "^8.0.3",
    "node-sass": "^4.11.0",
    "postcss-preset-env": "^6.6.0",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "reactstrap": "^7.1.0",
    "worker-loader": "^2.0.0"
  },
  "devDependencies": {
    "eslint-config-sharo-scripts": "^0.2.0",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.5.4",
    "xo": "^0.24.0"
  },
  "xo": {
    "extends": [
      "sharo-scripts"
    ],
    "space": 2,
    "semicolon": false
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended-scss"
    ]
  }
}
